<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_journal_form_inherit_deposit" model="ir.ui.view">
            <field name="name">account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/group/group/field[@name='inbound_payment_method_ids']" position="after">
                    <field name="is_check"/>
                </xpath>
                <xpath expr="//notebook/page[@name='advanced_settings']/group" position="inside">
                    <group string="Checks Accounts" attrs="{'invisible':[('is_check', '=', False)]}">
                        <field name="credit_check_account_id"
                               attrs="{'invisible':[('is_check', '=', False)],'required':[('is_check', '=', True)]}"/>
                        <field name="debit_check_account_id"
                               attrs="{'invisible':[('is_check', '=', False)],'required':[('is_check', '=', True)]}"/>
                    </group>
                </xpath>

            </field>
        </record>

    </data>
</odoo>