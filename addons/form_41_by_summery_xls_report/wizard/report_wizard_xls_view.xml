<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_wizard" model="ir.ui.view">
        <field name="name">form41.summery.report.wizard</field>
        <field name="model">form41.summery.report</field>
        <field name="arch" type="xml">
            <form string="Form 41 by Summery Report">
                <field name="state" invisible="1"/>
                <div states="get">
                    <group>
                        <field name="data" colspan="4" invisible="1"/>
                        <field name="file_name" filename="data" colspan="4"/>
                    </group>
                </div>
                <div states="choose">
                    <group>
                        <group>
                            <field name="start_date"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                        </group>
<!--                        <group>-->
<!--                            <field name="order_state"/>-->
<!--                        </group>-->
<!--                        <group>-->
<!--                            <field name="user_id" options="{'no_create': True}"/>-->
<!--                        </group>-->
                    </group>
                </div>
                <footer states="choose">
                    <button string="Generate Report"
                            class="btn-primary"
                            name="action_report"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
                <footer states="get">
                    <button special="cancel" string="Cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view" model="ir.actions.act_window">
        <field name="name">Form 41 by Summery Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">form41.summery.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_wizard"/>
        <field name="target">new</field>
    </record>

    <menuitem id="account_reports_form_41_by_summery_report_menu" name="Form 41 by Summery Report" parent="account.menu_finance_reports" sequence="7"/>

    <menuitem name="Form 41 by Summery Report" id="report_child_menu"
              parent="account_reports_form_41_by_summery_report_menu" sequence="1" action="action_view"/>
</odoo>