<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="sale_order_xls_report_wizard" model="ir.ui.view">
            <field name="name">sale.order.report.wizard</field>
            <field name="model">sale.order.report</field>
            <field name="arch" type="xml">
                <form string="Excel Report">
                    <field name="state" invisible="1"/>
                    <div states="get">
                         <group>
                            <field name="sale_order_data" colspan="4" invisible="1"/>
                            <field name="file_name" filename="sale_order_data" colspan="4"/>
                        </group>
                    </div>
                    <div states="choose">
                        <group>
                            <group>
                                <!--<field name="location_id" />-->
                                <field name="chk_activ_ids" invisible="1"/>
                                <!--<field name="product_id" attrs="{'invisible': [('chk_activ_ids', '=', True)]}"/>-->
                                <field name="product_id"/>
                            </group>
                            <group>
                                <field name="stock_location_id"/>
                                <!--<field name="stock_location_id" attrs="{'invisible': [('chk_activ_ids', '=', True)]}"/>-->
                                <!--<field name="stock_location_id"/>-->
                            </group>
                            <group>
                                <!--<field name="stock_location_id"/>-->
                            </group>
                            <group>
                                <field name="user_id" options="{'no_create': True}" invisible="1"/>
                            </group>
                        </group>
                    </div>
                    <footer states="choose">
                        <button string="Generate Report" 
                            class="btn-primary" 
                            name="action_sale_report"
                            type="object"/>
                        <button string="Cancel" 
                            class="btn-default" 
                            special="cancel" />
                    </footer>
                    <footer states="get">
                        <button special="cancel" string="Cancel" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_excel_product" model="ir.actions.act_window">
            <field name="name">Product Moves Excel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <!--<field name="groups_id" eval="[(4,ref('sales_team.group_sale_salesman'))]"/>-->
            <!-- TODO: check if we need this -->
            <field name="binding_model_id" ref="stock.model_stock_move_line" />
        </record>

