<odoo>
    <record id="res_config_settings_id" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <!-- Add your fields or attributes here -->
                <h4 style="background-color:#f2f2f2;padding-left:1.7vw">Merge Picking</h4>
                <div class="row mt16 o_settings_container">


                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="stop_merge"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                  aria-label="Values set here are company-specific." groups="base.group_multi_company"
                                  role="img"/>
                            <div class="text-muted">
                                control Merge Picking
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <span class="col-lg-3">stop Merge Picking:
                                        <field name="stop_merge"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </xpath>

        </field>
    </record>
</odoo>